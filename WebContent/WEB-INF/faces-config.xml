<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
	<navigation-rule>
		<from-view-id>login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginController.login}</from-action>
			<from-outcome>admin</from-outcome>
			<to-view-id>admin/index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginController.login}</from-action>
			<from-outcome>user</from-outcome>
			<to-view-id>user/index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginController.login}</from-action>
			<from-outcome>manager</from-outcome>
			<to-view-id>manager/index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>user/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginController.logout}</from-action>
			<from-outcome>logout</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>user/statistic.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginController.logout}</from-action>
			<from-outcome>logout</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>manager/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginController.logout}</from-action>
			<from-outcome>logout</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>admin/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginController.logout}</from-action>
			<from-outcome>logout</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
	</navigation-rule>
</faces-config>